---
interface Props {
  title: string;
  description: string;
  deploymentUrl?: string;
  deploymentUrlLabel?: string;
  sourceUrl: string;
  tags?: string[];
  image?: {
    url: string;
    alt: string;
  };
}

const {
  title,
  description,
  deploymentUrl,
  deploymentUrlLabel,
  sourceUrl,
  tags,
  image,
} = Astro.props;
---

<div
  class="card-compact card mt-24 w-96 max-w-sm bg-primary text-primary-content md:card-normal mx-auto"
>
  <div class="card-body">
    <h2 class="card-title text-2xl">{title}</h2>
    <p class="my-2">
      {description}
    </p>
    <div class="card-actions mt-2 flex-col items-end">
      {
        deploymentUrl && (
          <a class="btn-sm btn md:btn-md" href={deploymentUrl} target="_blank">
            {deploymentUrlLabel ?? "View Site"}
          </a>
        )
      }
      <a class="btn-sm btn md:btn-md" href={sourceUrl} target="_blank">
        Source Code
      </a>

      {
        tags && (
          <div>
            {tags.map((tag) => (
              <div class="badge badge-outline m-1">{tag}</div>
            ))}
          </div>
        )
      }
    </div>
  </div>
</div>
