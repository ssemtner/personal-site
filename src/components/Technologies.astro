---
import { Image } from "@astrojs/image/components";

const images = [
	{
		name: "C++",
		url: "/images/technologies/cpp.svg",
	},
	{
		name: "JavaScript",
		url: "/images/technologies/js.svg",
	},
	{
		name: "TypeScript",
		url: "/images/technologies/typescript.svg",
	},
	{
		name: "Python",
		url: "/images/technologies/python.svg",
	},
	{
		name: "Flask",
		url: "/images/technologies/flask.svg",
	},
	{
		name: "React",
		url: "/images/technologies/react.svg",
	},
	{
		name: "Next.js",
		url: "/images/technologies/next.svg",
	},
	{
		name: "Astro",
		url: "/images/technologies/astro.svg",
	},
];
---

<section id="technologies" class="pt-16">
	<div
		class="flex justify-evenly overflow-x-scroll gap-8 bg-base-300 p-8 mb-16"
	>
		{
			images.map((image) => (
				<div class="tooltip tooltip-bottom tooltip-primary flex-shrink-0 select-none " data-tip={image.name}>
					<Image
						src={image.url}
						alt={image.name}
						format="svg"
						width={64}
						height={64}
						class="scale-100"
						draggable={false}
					/>
				</div>
			))
		}
	</div>
</section>
